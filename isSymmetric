class Solution {
	public boolean isSymmetric(TreeNode root) {
		return ismirror(root, root);
	}

	public boolean ismirror(TreeNode p, TreeNode q) {
		if (p == null && q == null)
			return true;
		if (p != null && q != null) {
			if (p.val == q.val) {
				return (ismirror(p.left, q.right) && ismirror(p.right, q.left));
			}
		}
		return false;
	}
}
